@{
    ViewData["Title"] = "Home Page";
}
@model User

    <form action="postForm" method="post" class="mt-4">
        <div class="d-flex flx mb-2">
            <label style="flex: 1;">Your Name: </label>
            <input style="flex: 1;" asp-for="Name">
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
        <div class="d-flex flx mb-2">
            <label style="flex: 1;">Dojo Location: </label>
            <select style="flex: 1;" asp-for="Location">
                <option value="San Jose">San Jose</option>
                <option value="Corfu">Corfu</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="Location"></span>
        <div class="d-flex flx mb-2">
            <label style="flex: 1;">Fevorite Language: </label>
            <select style="flex: 1;" asp-for="Language">
                <option value="C#">C#</option>
                <option value="Python">Python</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="Language"></span>
        <div class="d-flex flx-2">
            <label class="d-block" for="">Comment (optional): </label>
        </div>
        <div class="d-flex flx-2">
            <textarea asp-for="Comment" cols="40" rows="5"></textarea>
        </div>
        <span class="text-danger" asp-validation-for="Comment"></span>
        <div class="d-flex flx-2 mt-3">
            <input type="submit">
        </div>

    </form>